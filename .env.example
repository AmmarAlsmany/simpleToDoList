# Vite Environment Variables
# Copy this file to .env.local and modify as needed

# Application Configuration
VITE_APP_NAME="SimpleTasks"
VITE_APP_VERSION="1.0.0"

# Development Configuration
VITE_NODE_ENV="development"

# Feature Flags (for future epics)
VITE_FEATURE_CALENDAR=false
VITE_FEATURE_CELEBRATIONS=false
VITE_FEATURE_DRAG_DROP=false

# Netlify Deployment Configuration
# These are set in Netlify dashboard for production builds
# VITE_API_URL=https://your-api.netlify.app
# VITE_ANALYTICS_ID=your-analytics-id
# NODE_VERSION=18
# NPM_VERSION=9